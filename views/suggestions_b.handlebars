                //document.getElementById(e.srcElement.id).style.boxShadow =
                //"7px 7px 8px rgba(0, 0, 0, 0.25) inset";
                fSize++;
                $('#downbar').fadeIn(500);
                ga('send', 'event', 'add', 'click');
            }

        }
