                document.write("\' onclick='saveChatName(this.id)'>");
                document.write("<div class='row top-buffer'>");
                document.write("<div class='col-4'>");
                document.write("<img src='https://i.imgur.com/eClV1JZ.png' class='img-fluid'>");
                document.write("<img src='https://miro.medium.com/max/512/1*nZ9VwHTLxAfNCuCjYAkajg.png' class='statusBubble'>");
                document.write("</div>");
                document.write("<div class='col-8'>");
                document.write("<h3 class='text-light'>"+fullname+"</h3>");
                document.write("<p style='color:#626262'>"+lastMsg+"</p>");
                document.write("</div>");
                document.write("</div>");
                document.write("</a>");
                document.write("<hr>");
                
                
            }

        </script>

